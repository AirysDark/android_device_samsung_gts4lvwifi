on init
    start hwservicemanager
    setprop crypto.ready 1

on fs
    wait /dev/block/platform/soc/${ro.boot.bootdevice}
    symlink /dev/block/platform/soc/${ro.boot.bootdevice} /dev/block/bootdevice
    export ANDROID_ROOT /system_root
    export TMPDIR /tmp

    chmod 0660 /dev/qseecom
    chown system drmrpc /dev/qseecom
    chmod 0664 /dev/ion
    chown system system /dev/ion

    # no clue why mounttodecrypt isn't getting triggered
    mount vfat /dev/block/bootdevice/by-name/apnhlos /firmware ro shortname=lower,uid=0,gid=1000,dmask=227,fmask=337

    # IMPORTANT!
    # This needs to be supported by the init binary!
    install_keyring

on boot
    setprop sys.usb.config adb

service sbinqseecomd /sbin/qseecomd
    user root
    group root
    disabled
    seclabel u:r:recovery:s0

service hwservicemanager /sbin/hwservicemanager
    user root
    group root
    disabled
    onrestart setprop hwservicemanager.ready false
    seclabel u:r:recovery:s0

service servicemanager /sbin/servicemanager
    user root
    group root readproc
    disabled
    seclabel u:r:recovery:s0

service keystore_auth /sbin/keystore_auth
    oneshot
    user system
    group root
    disabled
    seclabel u:r:recovery:s0

service keystore /sbin/keystore /tmp/misc/keystore
    user root
    group root drmrpc readproc
    disabled
    seclabel u:r:recovery:s0

service gatekeeper-1-0 /sbin/android.hardware.gatekeeper@1.0-service
    user root
    group root
    disabled
    seclabel u:r:recovery:s0

service keymaster-4-0 /sbin/android.hardware.keymaster@4.0-service.samsung
    user root
    group root
    disabled
    seclabel u:r:recovery:s0

on property:crypto.ready=0
    stop keymaster-4-0
    stop gatekeeper-1-0
    stop servicemanager
    stop sbinqseecomd

on property:crypto.ready=1
    start sbinqseecomd
    start servicemanager

    # Wait for qseecomd to finish
    wait_for_prop vendor.sys.listeners.registered true

    start keymaster-4-0
    start gatekeeper-1-0

on property:ro.build.version.security_patch=*
    setprop ro.vendor.build.security_patch ${ro.build.version.security_patch}
